{
  "name": "Weapon",
  "plural": "weapons",
  "base": "AbstractItem",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "itemType": {
      "type": "string",
      "required": true,
      "default": "weapon"
    },
    "damage": {
      "type": "number",
      "required": true
    },
    "damageMultiplier": {
      "type": "number",
      "required": true,
      "default": 1
    },
    "accuracy": {
      "type": "number",
      "required": true
    },
    "fireRate": {
      "type": "number",
      "required": true
    },
    "reloadSpeed": {
      "type": "number",
      "required": true
    },
    "magazineSize": {
      "type": "number",
      "required": true
    },
    "damageTypeId": {
      "type": "string",
      "required": true
    },
    "elemDamage": {
      "type": "number"
    },
    "elemChance": {
      "type": "number"
    },
    "weaponTypeId": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "damageType": {
      "type": "belongsTo",
      "model": "DamageType",
      "foreignKey": "damageTypeId"
    },
    "weaponType": {
      "type": "belongsTo",
      "model": "WeaponType",
      "foreignKey": "weaponTypeId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
